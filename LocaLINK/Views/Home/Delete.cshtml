@model LocaLINK.User_Account

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .alert-success {
        color: #155724;
        background-color: #d4edda;
        border-color: #c3e6cb;
        padding: .75rem 1.25rem;
        margin-bottom: 1rem;
        border: 1px solid transparent;
        border-radius: .25rem;
    }
</style>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

    @* Add this line at the end of the view *@
    @{
        var deletedSuccessfully = ViewData["deletedSuccessfully"] as bool? ?? false;
    }

    @if (deletedSuccessfully)
    {
        <div class="alert alert-success">User is completely deleted.</div>
    }
    else
    {
        <div class="alert alert-info">User deletion failed or user does not exist.</div>
    }
